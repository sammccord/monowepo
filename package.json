{
  "name": "@sammccord/monowepo",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sammccord/monowepo.git"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "services/*"
    ],
    "nohoist": [
      "**/@types/*",
      "**/@types/*/**"
    ]
  },
  "scripts": {
    "clean": "lerna run clean && lerna clean && yarn cache clean && yarn && sudo rm -rf $GOPATH/pkg && go get",
    "commit": "git-cz",
    "build": "lerna run build --scope @sammccord/monowepo.services.* --include-filtered-dependencies",
    "build:packages": "lerna run build --scope @sammccord/monowepo.packages.* --parallel",
    "dev": "yarn build:packages && yarn dev:services",
    "dev:services": "lerna run dev --parallel --scope @sammccord/monowepo.services.* --include-filtered-dependencies",
    "sync": "yarn && yarn build:packages",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn sync"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "ethlint": "^1.2.3",
    "faker": "^4.1.0",
    "husky": "^2.2.0",
    "lerna": "^3.13.1",
    "prisma": "^1.34.0",
    "semantic-release": "^15.13.12",
    "semantic-release-cli": "^5.0.0",
    "standard": "^12.0.1",
    "tslint": "^5.13.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "contract",
      "artifacts",
      "describe",
      "test",
      "it",
      "expect",
      "jest",
      "assert",
      "web3"
    ],
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "standard-react"
    ]
  }
}
